<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/basic_calculation_results_and_macro_nutrient_requirement"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:textColor="#008080"
        android:textSize="22sp" />

    <TableLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:minHeight="35dp"
            android:background="@drawable/border">

            <TextView
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="@string/bmi"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_column="1"

                android:layout_gravity="center"
                android:text="@string/body_fat"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="@string/bmr"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:minHeight="40dp">

            <TextView
                android:id="@+id/bmi_value"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bodyFat_value"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bmr_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </TableRow>


    </TableLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350dp"
        android:backgroundTint="#008080"
        android:fontFamily="sans-serif-black"
        android:text="@string/click_on"
        android:textAlignment="center"
        android:textColor="#008080"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="380dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:gravity="center"
        android:stretchColumns="0,1,2,3,4">

        <TableRow
            android:background="@drawable/border"
            android:layout_marginBottom="5dp"
            android:minHeight="35dp">

            <TextView
                android:layout_column="0"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Kcal"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="Protein"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_column="3"
                android:layout_gravity="center"
                android:text="Carb"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_column="4"
                android:layout_gravity="center"
                android:text="Fat"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:textSize="16sp"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_marginBottom="5dp"
            android:minHeight="40dp">

            <TextView
                android:id="@+id/bulking"
                android:layout_column="0"
                android:fontFamily="sans-serif-black"
                android:text="Bulking"
                android:layout_gravity="center"
                android:textColor="#008080"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bulk_tdee"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="TEST"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bulk_protein"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="TEST"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bulk_carb"
                android:layout_column="3"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/bulk_fat"
                android:layout_column="4"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_marginBottom="5dp"
            android:minHeight="40dp">

            <TextView
                android:id="@+id/keep"
                android:layout_height="25dp"
                android:layout_column="0"
                android:fontFamily="sans-serif-black"
                android:text="Maintan"
                android:layout_gravity="center"
                android:textColor="#008080"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/maintan_tdee"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/maintan_protein"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/maintan_carb"
                android:layout_column="3"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/maintan_fat"
                android:layout_column="4"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:minHeight="40dp">

            <TextView
                android:id="@+id/cutting"
                android:layout_column="0"
                android:text="Cutting"
                android:layout_gravity="center"
                android:textColor="#008080"
                android:fontFamily="sans-serif-black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cut_tdee"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/cut_protein"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/cut_carb"
                android:layout_column="3"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/cut_fat"
                android:layout_column="4"
                android:layout_gravity="center"
                android:text="TEST"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </TableRow>

    </TableLayout>



    <Button
        android:id="@+id/back_to_functions"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="600dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:backgroundTint="#008080"
        android:fontFamily="sans-serif-black"
        android:text="@string/back"
        android:textSize="12sp" />


</RelativeLayout>